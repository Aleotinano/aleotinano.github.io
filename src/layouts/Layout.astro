---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/ico.ico"
      class="rounded-full"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Aleo Portafolio</title>

    <style>
      html,
      body {
        width: 100%;
        height: 100%;

        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: row;
        min-height: 100vh;
        overflow: auto;
        background-color: var(--color-primary);
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
